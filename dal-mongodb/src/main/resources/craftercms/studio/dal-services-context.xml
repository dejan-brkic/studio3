<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder ignore-unresolvable="true"
                                  location="classpath*:craftercms/studio/dal-mongodb.properties"/>

    <bean id="studio.dal.mongodb.server" class="com.mongodb.ServerAddress">
        <constructor-arg value="localhost"/>
        <constructor-arg value="${studio.dal.mongodb.connection.port}"/>
    </bean>

    <bean id="studio.dal.mongodb.options"
          class="org.craftercms.studio.impl.dal.mongodb.ClientOptionsFactory">
        <property name="autoConnectRetry" value="${studio.dal.mongodb.connection.autoConnectRetry}"/>
        <property name="connectionsPerHost" value="${studio.dal.mongodb.connection.connectionsPerHost}"/>
        <property name="maxAutoConnectRetryTime" value="${studio.dal.mongodb.connection.maxWaitTime}"/>
        <property name="socketKeepAlive" value="${studio.dal.mongodb.connection.socketKeepAlive}"/>
        <property name="threadsAllowedToBlockForConnectionMultiplier"
                  value="${studio.dal.mongodb.connection.threadsAllowedToBlockForConnectionMultiplier}"/>
        <property name="connectTimeout" value="${studio.dal.mongodb.connection.connectTimeout}"/>
        <property name="writeConcern" value="${studio.dal.mongodb.connection.writeConcern}"/>
        <property name="readPreference" value="${studio.dal.mongodb.connection.readPreference}"/>
    </bean>

    <bean id="studio.dal.mongodb.client" class="com.mongodb.MongoClient">
        <constructor-arg>
            <list>
                <ref bean="studio.dal.mongodb.server"/>
            </list>
        </constructor-arg>
        <constructor-arg ref="studio.dal.mongodb.options"/>
    </bean>

    <bean id="studio.dal.client" class="org.craftercms.studio.impl.dal.mongodb.DALClient" init-method="init">
        <property name="mongoClient" ref="studio.dal.mongodb.client"/>
        <property name="username" value="${studio.dal.mongodb.connection.dbUser}"/>
        <property name="password" value="${studio.dal.mongodb.connection.dbPassword}"/>
        <property name="database" value="${studio.dal.mongodb.connection.db}"/>
    </bean>

    <bean id="studio.dal.service.parent" abstract="true" class="org.craftercms.studio.impl.dal.AbstractDALService">
        <property name="dalClient" ref="studio.dal.client"/>
    </bean>

    <bean id="studio.dal.service.auditService" parent="studio.dal.service.parent"
          class="org.craftercms.studio.impl.dal.audit.AuditDALServiceImpl">
        <property name="collectionName" value="${studio.dal.mongodb.collection.audit}" />
    </bean>

</beans>